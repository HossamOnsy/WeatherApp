<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_16sdp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp" xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/_16sdp"
            android:layout_width="match_parent"
                                                       android:layout_height="match_parent">
    <TextView
            android:id="@+id/tv_lat"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/latitude"/>
        <TextView
                android:id="@+id/tv_lat_value"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_lat"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
               />
        <TextView
                android:id="@+id/tv_lon"
                app:layout_constraintTop_toBottomOf="@id/tv_lat"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/longitude"/>
        <TextView
                android:id="@+id/tv_lon_value"
                app:layout_constraintTop_toTopOf="@id/tv_lon"
                app:layout_constraintStart_toEndOf="@id/tv_lon"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
        />

        <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="@dimen/_50sdp" android:layout_height="@dimen/_50sdp"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:src="@drawable/delete"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>